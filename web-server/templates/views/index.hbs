<!-- This is a "handlebars" file -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" href="/img/weather.png">
    <title>Weather App</title>
</head>

<body>
    <div class="main-content">
        {{>header}}

        <p>Use this site to get your local weather!</p>

        <form>
            <input type="text" placeholder="What city do you live in?">
            <button>Search</button>
        </form>

        <!-- These are the results that will update when the user hits "Submit" -->
        <p id="message-1"></p>
        <p id="message-2"></p>

    </div>
    <!-- Injects a value into a handlebars file -->
    {{>footer}}
    <script src="/js/app.js"></script>
</body>

</html>